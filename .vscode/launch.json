    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/__init__.py",
            "console": "integratedTerminal",
            "subProcess": true,
            "env": {               
                "FLASK_APP": "app",
                "FLASK_DEBUG": "1"
            }
        },
        {
            "name": "Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "subProcess": true,
            "args": [
                "run",
                "--no-debugger"
            ],
            "env": {
                "FLASK_ENV": "development",
                "FLASK_APP": "app",
                "FLASK_DEBUG": "1"
            }
        }
    ]
}
